<section class="profile-page">
  <div class="container">
    <div class="col-lg-2">
      <div class="user-details">
        <div class="container">
          <%= image_tag @user.try(:avatar).url(:medium), class: 'profile-image' %>
            <div id="user-details">
              <h4><%= @user.try(:username) %></h4>
              <%= link_to "Follow", "#", :class => "btn" %>
            </div>
        </div>
      </div>
    </div>
    <div class="col-lg-10">
      <div class="user-favourites">
        <h4 class="user-heading-title">Liked</h4>
        <div class="row">
            <% @user.likes.each do |item| %>
            <div class="col-md-20 col-lg-20">
              <%= render partial: 'products/product_w2', locals: {product: item } %>
            </div>
            <% end %>
          </div>
      </div>
      <% if current_user == @user %>
      <div class="user-recently-viewed">
        <h4 class="user-heading-title">Recently viewed</h4>
        <div class="row">
            <% @user.recently_viewed_products.each do |item| %>
            <div class="col-md-20 col-lg-20 ">
              <%= render partial: 'products/product_w2', locals: {product: item } %>
            </div>
            <% end %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
