<div class="filters">
<div class="btn-group">
  <a type="button" class="filter-item dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Category <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li>
      <div class="row" style="width:650px;">
        <ul class="list-unstyled col-md-4">
          <li><%= link_to "All", explore_path %></li>
          <% @categories.where(:id => 1..8).each do |category| %>
          <li><%= link_to category.name, category_path(category.name) %></li>
          <% end %>
        </ul>
        <ul class="list-unstyled col-md-4">
          <% @categories.where(:id => 9..16).each do |category| %>
          <li><%= link_to category.name, category_path(category.name) %></li>
          <% end %>
        </ul>
        <ul class="list-unstyled col-md-4">
          <% @categories.where(:id => 17..22).each do |category| %>
          <li><%= link_to category.name, category_path(category.name) %></li>
          <% end %>
        </ul>
      </div>
    </li>
  </ul>
</div>
<div class="btn-group">
  <a type="button" class="filter-item dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Shops <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "All", explore_path %></li>
    <% @retailers.each do |retailer| %>
      <li><%= link_to retailer.name, retailer_path(retailer.id) %>
    <% end %>
  </ul>
</div>
<div class="btn-group">
  <a type="button" class="filter-item dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Price <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "All", explore_path %></li>
    <% @retailers.each do |retailer| %>
      <li><%= link_to retailer.name, retailer_path(retailer.id) %>
    <% end %>
  </ul>
</div>
</div>
