<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<h3>Explore CrossLabel</h3>
  <p>Immediately start discovering thousands of products from around the world</p>
    <%= devise_error_messages! %>

    <%- if devise_mapping.omniauthable? %>
      <%- Devise.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn-facebook-login' do %>
        <%= "Log in with #{provider.to_s.titleize}" %>
      <% end %>
      <% end -%>
    <% end -%>


    <div class="separator">
        <span>or</span>
    </div>
    <div class="input-group">
      <%= f.email_field :email, placeholder: 'Your email', class: 'form-control' %>
    </div>

    <div class="input-group">
      <%= f.password_field :password, placeholder: 'Your password', autocomplete: "off", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log me in!", class: 'btn-login' %>
    </div>

    <div class="login-links">
      <p>Don't have an account? <%= link_to "Sign up", new_user_registration_path, id: 'signup-link' %><br /></p>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  <% end %>
