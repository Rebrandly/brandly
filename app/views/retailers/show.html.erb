      <div class="retailer-card">
        <h2><%= @retailer.name %></h2>
        <ul class="nav navbar-nav retailer-social-list">
          <li class="retailer-social-icon"><i class="fa fa-facebook-official fa-2x"></i></li>
          <li class="retailer-social-icon"><i class="fa fa-twitter fa-2x"></i></li>
