<section class="explore-page">
  <div class="container">
    <div class="row">
        <h3 class="explore-heading"><%= @retailer.name %></h3>
    </div>
    <div class="row">
      <h3 class="explore-heading">Recommended items</h3>

      <div id="products-list">
          <% @products.each do |product| %>
          <div class="product-container col-sm-6 col-md-20 animated fadeIn">
            <%= render partial: 'products/product', locals: { product: product } %>
          </div>
          <% end %>
        <div id="placeholder">
        </div>
      </div>
    </div>
    <%= paginate @products %>
    </div>
  </div>

</section>
