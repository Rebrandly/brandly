<% breadcrumb @category %>
<% content_for :title do %><%= @category.name.capitalize %><% end %>
<section class="explore-hero">
  <div class="hero">
    <%= render partial: 'shared/header_secondary' %>
    <div class="hero-content">
      <h3 class="explore-hero-heading">You can never cross the ocean until you have the courage to lose sight of the shore.</h3>
    </div>
    <div class="search">
      <div class="container">
        <%= form_tag products_path, :class => "form-search", :method => 'get' do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: 'form-control', id: 'product-search', autocomplete: 'off', placeholder: "Know what you're looking for? Search away!" %>
          <div class="input-group-btn">
          <button type="submit" class="btn-search" value="Search">Search</button>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section class="explore-page">
  <div class="container">

    <%= render partial: 'shared/filter' %>
    <%= breadcrumbs separator: " &rsaquo; " %>
    <div class="row">
      <h3 class="explore-heading">Trending <%= @category.name.capitalize %></h3>

    <% @products.limit(4).each do |product| %>
      <div class="product-container col-sm-3">
        <%= render partial: 'products/product_w2', locals: { product: product } %>
      </div>
    <% end %>
    </div>
    <div class="row">
      <h3 class="explore-heading">Recommended items</h3>
      <div class="products-list">
          <% @products.each do |product| %>
          <div class="product-container col-sm-6 col-md-20 animated fadeIn">
            <%= render partial: 'products/product', locals: { product: product } %>
          </div>
          <% end %>
        <div id="placeholder">
        </div>
      </div>
    </div>
    <%= paginate @products %>
    </div>
  </div>

</section>
