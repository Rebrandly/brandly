<header class="header">
  <div class="container">
    <div class="navbar-header">
    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <i class="fa fa-bars fa-lg"></i>
    </button>
    <%= link_to "Crosshaul", root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Explore", explore_path %></li>
        <li><%= link_to "Trending", trending_path %></li>
        <li><%= link_to "Categories", trending_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= image_tag current_user.try(:avatar), class: "header-profile-image" %><span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Profile", profile_path(current_user.username) %></li>
            <li><%= link_to "Settings", user_settings_path(current_user.username) %></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </li>
      </ul>
      <% else %>
      <li><%= link_to "Sign up", "#", {:remote => true, 'data-toggle' => 'modal', 'data-target' => '#signup-modal'} %></li>
      <li><%= link_to "Log in", "#", {:remote => true, 'data-toggle' => 'modal', 'data-target' => '#login-modal'} %></li>
      <% end %>
      </ul>
    </div>
  </div>
</header>
