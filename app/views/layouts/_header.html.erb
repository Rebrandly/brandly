<div class="header">
  <div class="container">
    <div class="navbar-header">
    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <i class="fa fa-bars fa-lg"></i>
    </button>
    <%= link_to "Crosshaul", root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
      <li><%= link_to current_user.email, profile_path(current_user.username) %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Sign up",  new_user_registration_path %></li>
      <li><%= link_to "Log in", new_user_session_path %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
