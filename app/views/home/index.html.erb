<% unless current_user %>
<section id="hero" style="text-align:center">
  <h3>Discover and collect the best brands from around the world.</h3>
  <%= link_to "Sign up now", "#", {:class => 'signup-cta', :remote => true, 'data-toggle' => 'modal', 'data-target' => '#signup-modal'} %>
</section>
<% end %>

<!-- Modal -->
<section id="product-home" class="content-s1">
  <div class="products-list">
    <div class="container">
      <%= render @products %>
    </div>
    <div id="placeholder">
    </div>
  </div>
  <%= link_to "Load more", "#placeholder", :id => 'next' %>

  <div style="display:none">
  <%= paginate @products %>
  </div>
</section>
