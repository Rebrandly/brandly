<% if current_user %>
<% content_for :title do %> Home <% end %>
<!-- Modal -->

<section id="product-home" class="content-s1">
    <div class="recommended">
      <div class="container">
        <h3>Recommended</h3>
        <div class="row">
        <% Product.all.limit(4).each do |product| %>
        <div class="product-container col-sm-6 col-md-3 animated fadeIn">
          <%= render partial: 'products/product', locals: {product: product} %>
        </div>
        <% end %>
        </div>
        <a class="btn" style="width:240px;">See more</a>

      </div>
    </div>
    <div class="trending">
      <div class="container">
      <h3>Trending</h3>
      <div class="row">
        <% Product.all.limit(4).each do |product| %>
        <div class="product-container col-sm-6 col-md-3 animated fadeIn">
          <%= render partial: 'products/product', locals: {product: product} %>
        </div>
        <% end %>
      </div>
      <a class="btn" style="width:240px;">See more</a>
      </div>
    </div>
</section>

<% else %>

<section id="hero">
  <div class="hero-overlay">
  <header class="home-header">
    <div class="container">
      <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <i class="fa fa-bars fa-lg"></i>
      </button>
      <%= link_to "Cross x Label", root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Explore", explore_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= image_tag current_user.try(:avatar), class: "header-profile-image" %></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to user_path(current_user.username) do %><i class="fa fa-user"></i> Profile<% end %></li>
              <li><%= link_to edit_user_path(current_user.username) do %><i class="fa fa-cog"></i> Settings<% end %></li>
              <li><%= link_to destroy_user_session_path, :method => :delete do %><i class="fa fa-sign-out"></i> Sign out<% end %></li>
            </ul>
          </li>
        </ul>
        <% else %>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
        <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </header>
  <div class="hero-content">
  <h1>Fashion is borderless</h1>
  <h4>Discover and shop the best brands from around the world.</h4>
  <%= link_to "Start exploring", explore_path, :class => 'cta' %>
  </div>
  </div>
</section>
<section id="home-trending-cities">
    <div class="section-intro">
      <h3 class="primary-heading">Trending cities</h3>
      <h5 class="secondary-heading">Which cities are currently most popular.</h5>
    </div>
    <div class="cities">
      <div class="container">
      <div class="row">
        <a href="#" class="cities-item col-sm-6 col-md-3 animated fadeIn">
          <div class="city" style="background:url('https://d13yacurqjgara.cloudfront.net/users/120724/screenshots/1444317/wall_street_thumb_1x.png');background-size:cover;">
            <div class="city-overlay"><span class="city-heading">New York</span></div>

          </div>
        </a>
        <a href="#" class="cities-item col-sm-6 col-md-3 animated fadeIn">
          <div class="city" style="background:url('https://d13yacurqjgara.cloudfront.net/users/24177/screenshots/1019646/osaka_1x.png');background-size:cover;">
            <div class="city-overlay"><span class="city-heading">Tokyo</span></div>

          </div>
        </a>
        <a href="#" class="cities-item col-sm-6 col-md-3 animated fadeIn">
          <div class="city" style="background:url('https://d13yacurqjgara.cloudfront.net/users/396000/screenshots/1546266/bigben_dribbble-01_1x.png');background-size:cover;">
            <div class="city-overlay"><span class="city-heading">London</span></div>
          </div>
        </a>
        <a href="#" class="cities-item col-sm-6 col-md-3 animated fadeIn">
          <div class="city" style="background:url('https://d13yacurqjgara.cloudfront.net/users/36598/screenshots/1577412/sans_titre_-_2-01.jpg');background-size:cover;">
            <div class="city-overlay"><span class="city-heading">Montreal</span></div>
          </div>
        </a>
      </div>
      </div>
    </div>
</section>
<section id="home-trending-products">
  <div class="section-intro">
    <h3>Loved products</h3>
    <h5 class="secondary-heading">Some items currently trending around the world.</h5>
  </div>
  <div class="trending">
    <div class="container">
    <div class="row">
      <% Product.all.limit(5).each do |product| %>
      <div class="product-container col-sm-6 col-md-20 animated fadeIn">
        <%= render partial: 'products/product', locals: {product: product} %>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</section>
<% end %>
