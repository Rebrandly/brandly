<% content_for :title do %> Explore <% end %>
<!-- Modal -->
<section class="explore-hero hero">
    <%= render partial: 'shared/header_secondary' %>
    <div class="search">
      <div class="container">
        <%= form_tag products_path, :class => "form-search", :method => 'get' do %>
        <div class="input-group">
          <span class="input-group-addon" style="background:none;border-color:#fff;border-top: 0;border-left:0;border-radius:0;"><i class="fa fa-search fa-2x"></i></span>
          <%= text_field_tag :query, params[:query], class: 'form-control', id: 'product-search', autocomplete: 'off', placeholder: "Know what you're looking for? Search away!" %>
        </div>
        <% end %>
      </div>
    </div>
</section>
<section class="explore-page">
    <div class="row">
      <div class="container">
      <%= render partial: 'shared/filter' %>
      </div>
    </div>
    <div class="row">
      <div class="container">
        <h3 class="explore-heading">Explore</h3>

          <div class="products-list">
              <% @recommended_products.each do |recommended_product| %>
              <div class="product-container col-sm-6 col-md-20 animated fadeIn">
                <%= render partial: 'products/product', locals: { product: recommended_product } %>
              </div>
              <% end %>
            <div id="placeholder">
            </div>
          </div>
          <%= paginate @recommended_products %>
      </div>
    </div>
</section>
