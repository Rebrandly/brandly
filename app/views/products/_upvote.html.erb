<% if current_user %>
  <%= link_to product_vote_path(product.id), remote: true, method: :post do %>
   <i class="fa fa-heart not-voted fa-2x"></i>
  <% end %>
<% else %>
  <%= link_to "#", {:remote => true, 'data-toggle' => 'modal', 'data-target' => '#signup-modal'} do %>
   <i class="fa fa-heart not-voted fa-2x"></i>
  <% end %>
<% end %>
